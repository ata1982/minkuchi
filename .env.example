# ===== RENDER DEPLOYMENT CONFIGURATION =====

# Database (Render PostgreSQL)
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# NextAuth.js (Required for Render)
NEXTAUTH_SECRET="your-super-secret-32-character-string"
NEXTAUTH_URL="https://your-app.onrender.com"

# Node.js Environment
NODE_ENV="production"
PORT="10000"

# ===== APPLICATION SETTINGS =====

# App Configuration
APP_NAME="Minkuchi"
APP_URL="https://your-app.onrender.com"

# ===== EXTERNAL API KEYS =====

# OpenAI API
OPENAI_API_KEY="your-openai-api-key"

# ElevenLabs API (for voice features)
ELEVENLABS_API_KEY="your-elevenlabs-api-key"

# Google OAuth (if using)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===== OPTIONAL SETTINGS =====

# Socket.io Configuration
SOCKET_PORT="3001"

# Upload Configuration
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
API_RATE_LIMIT="100"

# Cache Settings
CACHE_DURATION="3600"

# ===== DEVELOPMENT ONLY =====
# These are not needed for Render deployment

# Local Database (Development)
# DATABASE_URL="postgresql://username:password@localhost:5432/minkuchi_dev"

# Local App URL (Development)
# NEXTAUTH_URL="http://localhost:3000"
# APP_URL="http://localhost:3000"